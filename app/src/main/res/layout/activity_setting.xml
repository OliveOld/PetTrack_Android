<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_iphone1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_manager_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="70dp"
        tools:context="org.olive.pets.SettingActivity">

        <Button
            android:id="@+id/btn_bt_setting"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기기 연결"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="#44EEEEEE"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_collect_data"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추가 데이터 수집"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_below="@id/btn_bt_setting"
            android:background="#EEEEEE"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_init_setting"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_collect_data"
            android:text="초기화"
            android:padding="10dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn_manager_info_setting"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개발자 정보"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_below="@id/btn_init_setting"
            android:background="#44EEEEEE"
            android:gravity="center_horizontal"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#44F6F6F6"
        android:orientation="vertical"
        android:weightSum="100">

        <Button
            android:id="@+id/explanation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="#00ff0000"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="\n\n\n           petsDroid"  />

        <Button
            android:id="@+id/btn_main_mi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#77F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="메인 화면" />

        <Button
            android:id="@+id/btn_daily_report_mi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#77F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="날짜별 활동량" />

        <Button
            android:id="@+id/btn_dog_info_mi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#77F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="강아지 정보" />

        <Button
            android:id="@+id/btn_setting_mi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:background="#33F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="환경설정" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
