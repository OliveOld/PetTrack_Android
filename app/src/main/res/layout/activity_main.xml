<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_iphone1"
    tools:context="org.olive.pets.Chart.PieChart_Activity">

    <LinearLayout
        android:id="@+id/bellow_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_my_dog_image"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dog"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_dog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="dog_name"
                    android:textColor="#e49e9e"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_my_dog_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="dog_info"
                    android:textColor="#FFCCCC"
                    android:padding="10dp"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>


        <!-- pie chart 추가 부분 -->

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart_main"
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:paddingTop="5dp"
            />

    </LinearLayout>

    <!-- 슬라이딩메뉴 start -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#22F6F6F6"
        android:orientation="vertical"
        android:weightSum="100" >

        <!--투명도/빨/파/초-->

        <Button
            android:id="@+id/explanation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="#00ff0000"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="\n\n\n           petsDroid"  />

        <Button
            android:id="@+id/btn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#77F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="메인 화면" />

        <Button
            android:id="@+id/btn_daily_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#77F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="날짜별 활동량" />

        <Button
            android:id="@+id/btn_dog_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#77F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="강아지 정보" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#33F6F6F6"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="환경설정" />

    </LinearLayout>
    <!-- 슬라이딩메뉴 end -->
</android.support.v4.widget.DrawerLayout>
