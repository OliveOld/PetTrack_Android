<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dog_image"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dog"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="dog_name"
                    android:textColor="#e49e9e"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dog_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="dog_info"
                    android:textColor="#FFCCCC"
                    android:padding="10dp"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartshow"
                android:layout_width="match_parent"
                android:layout_height="252dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#e49e9e"
        android:orientation="vertical"
        android:weightSum="100">

        <Button
            android:id="@+id/daily_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#FFCCCC"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="활동 분석 및 추천 / daily_report" />

        <Button
            android:id="@+id/daily_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_report"
            android:layout_centerHorizontal="true"
            android:background="#98DFFF"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="활동 목표 달성 / daily_activity" />

        <Button
            android:id="@+id/daily_work_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_activity"
            android:layout_centerHorizontal="true"
            android:background="#FFF064"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="최근 활동량 / daily_work_rate" />

        <Button
            android:id="@+id/manager_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_work_rate"
            android:layout_centerHorizontal="true"
            android:background="#99FF99"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="관리자 정보 / Manager Info" />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
