<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/introback2">

    <LinearLayout
        android:id="@+id/layout_connect"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="기기가 연결 된 후 자료를 수집합니다.\n 버튼을 눌러 기기를 연결 해 주세요."
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="30dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기기 연결"
                android:background="@drawable/button"
                android:id="@+id/btn_bt_training"/>
            <Button
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건너뛰기"
                android:background="@drawable/button"
                android:id="@+id/btn_bt_cancel"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_progress"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bean_connect_t"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            style="?android:attr/progressBarStyleLarge"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="기기와 연결중입니다..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbtn_walk"
                    android:padding="0dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button"
                    app:srcCompat="@drawable/dog_walking"
                    android:scaleType="fitCenter"
                    android:text="앉기"/>

                <ImageButton
                    android:id="@+id/imgbtn_run"
                    android:padding="0dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    app:srcCompat="@drawable/dog_running"
                    android:text="앉기"/>

                <ImageButton
                    android:id="@+id/imgbtn_lieback"
                    android:padding="0dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/dog_lying_back"
                    android:text="뒤로 눕기"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbtn_lie"
                    android:padding="0dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/dog_lying"
                    android:background="@drawable/button"
                    android:text="눕기"/>

                <ImageButton
                    android:id="@+id/imgbtn_stand"
                    android:layout_width="100dp"
                    android:background="@drawable/button"
                    android:padding="0dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/dog_stand"
                    android:scaleType="fitCenter"
                    android:text="서있기"/>

                <ImageButton
                    android:id="@+id/imgbtn_seat"
                    android:padding="0dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/dog_seating"
                    android:scaleType="fitCenter"
                    android:background="@drawable/button"
                    android:text="앉기"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imgbtn_lieside"
                    android:padding="0dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/dog_lying_side"
                    android:text="옆으로눕기"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:id="@+id/btn_submit_tutorial"/>
</LinearLayout>