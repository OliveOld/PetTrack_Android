<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/introback3" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="80dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_dog_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:listitem="@layout/list_dog_item" />

    </RelativeLayout>

    <!-- 슬라이딩메뉴 start -->
    <LinearLayout
        android:id="@+id/sildmenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#dcdcdc"
        android:orientation="vertical"
        android:weightSum="100" >

        <!--투명도/빨/파/초-->

        <Button
            android:id="@+id/explanation"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sildeback"
            android:gravity="left|center_vertical"
            android:padding="100dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8c8c8c"/>
        <Button
            android:id="@+id/btn_main_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#dcdcdc"
            android:padding="18dp"
            android:text="메인 화면"
            android:paddingLeft="18dip"
            android:drawablePadding="18dip"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/home_icon"
            android:textColor="#8c8c8c"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8c8c8c"/>
        <Button
            android:id="@+id/btn_daily_report_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:background="#dcdcdc"
            android:gravity="left|center_vertical"
            android:padding="18dp"
            android:text="날짜별 활동량"
            android:paddingLeft="18dip"
            android:drawablePadding="18dip"
            android:drawableLeft="@drawable/ic_calendar_24dp"
            android:textColor="#8c8c8c"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8c8c8c"/>
        <Button
            android:id="@+id/btn_dog_info_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#dcdcdc"
            android:gravity="left|center_vertical"
            android:padding="18dp"
            android:text="강아지 정보"
            android:paddingLeft="18dip"
            android:drawablePadding="18dip"
            android:textColor="#000000"
            android:drawableLeft="@drawable/dog_bnt"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8c8c8c"/>
        <Button
            android:id="@+id/btn_setting_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#dcdcdc"
            android:gravity="left|center_vertical"
            android:padding="18dp"
            android:text="환경설정"
            android:paddingLeft="18dip"
            android:drawablePadding="18dip"
            android:textColor="#8c8c8c"
            android:drawableLeft="@drawable/setting"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8c8c8c"/>
    </LinearLayout>
    <!-- 슬라이딩메뉴 end -->

</android.support.v4.widget.DrawerLayout>