<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DeviceFontMain" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/device_font_main</item>
    </style>

    <style name="DeviceFontSecondary" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/device_font_secondary</item>
    </style>

    <style name="DeviceFontTiny" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/device_font_secondary</item>
    </style>

    <style name="DeviceFontHint" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/device_font_hint</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
